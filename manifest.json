{
  "manifest_version": 2,

  "name": "Large keyboard for Google Input Tools",
  "short_name": "Big keyboard",
  "description": "This extension makes Input Tools's keyboard larger. Nothing more, nothing less.",
  "version": "0.0.7",
  "icons": {
    "128": "thirdparty/icon128.png",
    "280": "thirdparty/icon280.png"
  },

  "browser_action": {
    "default_icon": "thirdparty/icon280.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "all_frames": true,
      "css": ["style.css"]
    }
  ]
}
